<!DOCTYPE html>
<html>
  <head>
    <title>Landing Page</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css" />
    <%- include('partials/favico') %>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container-fluid vh-100" style="margin-top: 10px">
      <div class="" style="margin-top: 100px">
        <div class="rounded d-flex justify-content-center">
          <div class="col-lg-6 col-md-8 col-sm-12 shadow-lg p-5 bg-light">
            <div class="text-center">
              <h3 class="text-primary mb-3">Landing Page</h3>
              <div class="row">
                <% if (locals.checkingAccount) { %>
                <div
                  class="col-md-5 col-xs-12 mb-xs-5 p-0 d-flex align-items-stretch"
                  style="background: #0d6efd"
                >
                  <a
                    href="/transactionHistory"
                    class="box-shadow d-flex align-items-stretch w-100"
                  >
                    <!-- Account info DIV -->
                    <div class="bg-white p-1 row ms-3 w-100">
                      <div>
                        <h5 class="text-start">Checking Account</h5>
                      </div>
                      <!-- Force next columns to break to new line -->
                      <div class="w-100"></div>
                      <div class="d-flex">
                        <!-- Account balance -->
                        <div class="flex-shrink-1">
                          <p class="text-start me-2">Available Balance</p>
                        </div>
                        <div class="flex-fill">
                          <p class="text-end fw-bold">
                            <%- locals.checkingAccount %>
                          </p>
                        </div>
                        <!-- End of Account balance -->
                      </div>
                    </div>
                    <!-- End of Account info DIV -->
                  </a>
                </div>
                <% } %>
                <div class="col-md-1 col-xs-0"></div>
                <% if (locals.savingAccount) { %>
                <div
                  class="col-md-5 col-xs-12 p-0 d-flex align-items-stretch"
                  style="background: #198754"
                >
                  <a
                    href="/transactionHistory"
                    class="box-shadow d-flex align-items-stretch w-100"
                  >
                    <!-- Account info DIV -->
                    <div class="bg-white p-1 row ms-3 w-100">
                      <div>
                        <h5 class="text-start">Saving Account</h5>
                      </div>
                      <!-- Force next columns to break to new line -->
                      <div class="w-100"></div>
                      <div class="d-flex">
                        <!-- Account balance -->
                        <div class="flex-shrink-1">
                          <p class="text-start me-2">Available Balance</p>
                        </div>
                        <div class="flex-fill">
                          <p class="text-end fw-bold">
                            <%- locals.savingAccount %>
                          </p>
                        </div>
                        <!-- End of Account balance -->
                      </div>
                    </div>
                    <!-- End of Account info DIV -->
                  </a>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
