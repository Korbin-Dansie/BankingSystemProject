<!DOCTYPE html>
<html>

<head>
  <title>Bank Transaction History</title>
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <%- include('partials/favico') %>

</head>

<body>
  <%- include('partials/navbar') %>

  <div class="rounded d-flex justify-content-center p-2">
    <h2>Bank</h2>
  </div>
  <div class="rounded d-flex justify-content-center p-2">
    <h3>Transaction History</h3>
  </div>
  <div class="rounded d-flex justify-content-center p-2">
    <div class="m-2" style="width: 400px">
      <h5>Checking History</h1>
    </div>
    <div class="m-2" style="width: 400px">
      <h5>Savings History</h5>
    </div>
  </div>
  <div class="rounded d-flex justify-content-center">
    <div class="m-2" style="width: 400px">
      <table class="table table-striped table-hover">
        <thead>
          <!-- <tr>
            <th colspan="2">Top 10 Say Font Color</th>
          </tr> -->
          <tr>
            <th scope="col">Amount</th>
            <th scope="col">Memo</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          <% if (typeof transactionHistory != 'undefined') { %>
          <% transactionHistory.forEach(entry => {%>
            <%if (entry.account_type_id == 1) { %>
            <tr>
              <td><%= entry.transaction_amount %></td>
              <td><%= entry.memo %></td>
              <td><%= entry.transaction_time %></td>
            </tr>
            <% } %>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="m-2" style="width: 400px">
      <table class="table table-striped table-hover">
        <thead>
          <!-- <tr>
            <th colspan="2">Top 10 Say Text Word</th>
          </tr> -->
          <tr>
            <th scope="col">Amount</th>
            <th scope="col">Memo</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          <% if (typeof transactionHistory != 'undefined') { %>
            <% transactionHistory.forEach(entry => {%>
              <%if (entry.account_type_id == 2) { %>
              <tr>
                <td><%= entry.transaction_amount %></td>
                <td><%= entry.memo %></td>
                <td><%= entry.transaction_time %></td>
                </tr>
              <% } %>
            <% }) %>
            <% } %>          </tbody>
      </table>

    </div>
  </div>


  <div class="rounded d-flex justify-content-center">
    <button type="button" class="btn btn-primary" onclick="window.location.href='/landingPage'">Return to main</button>
  </div>
</body>

</html>