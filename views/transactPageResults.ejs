<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap 5 Login Form Example</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="font/bootstrap-icons.css" />

    <script>
        function checkPassword(event) {}
    </script>

</head>

<body>
    <div class="container-fluid vh-100" style="margin-top:10px">
        <div class="" style="margin-top:100px">
            <div class="rounded d-flex justify-content-center">
                <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">
                    <div class="text-center">
                        <h3 class="text-primary">Transaction</h3>
                    </div>
                    <form action="/landingPage" onSubmit="return checkPassword(event);" method="post">
                        <div class="p-4">
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-wallet text-white"></i>
                                </span>
                                <!-- Transfer type -->
                                <select id="administration" name="administration" class="form-select" required>
                                    <option hidden disabled selected value> -- Transaction Type -- </option>
                                    <option value="deposit">Deposit</option>
                                    <option value="widthdraw">Widthdraw</option>
                                </select>
                            </div>
                            <!-- Select Amount -->
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary">
                                    <i class="bi bi-currency-dollar text-white"></i>
                                </span>
                                <input id="amount" name="amount" type="number" min="1" step="any" class="form-control"
                                    placeholder="Amount">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary text-center mt-2" type="submit">
                                Submit
                            </button>
                        </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</body>

</html>